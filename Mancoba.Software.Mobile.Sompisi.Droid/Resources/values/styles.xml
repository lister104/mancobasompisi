  <!--- Splash theme -->
  <style name="SplashTheme" >
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <!-- Vertical Centered -->
  <style name="layout_center_vertical">
    <item name="android:orientation">vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
  </style>

  <!-- LOGIN SCREEN -->
  <!-- Mancoba Logo -->
  <style name="logo_mancoba_dark">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:src">@drawable/splash</item>
  </style>

  <style name="logo_mancoba_main">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingBottom">15dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:src">@drawable/mancoba_mid</item>
  </style>

  <!-- Input Field Top -->
  <style name="form_input_login">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">45dp</item>
    <item name="android:padding">10dp</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:drawablePadding">5dp</item>
  </style>

  <style name="form_add_customer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:padding">7dp</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:drawablePadding">5dp</item>
  </style>

  <style name="form_mydetails">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:padding">7dp</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:drawablePadding">5dp</item>
    <item name="android:editable">false</item>
  </style>

  <style name="form_text">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:padding">7dp</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textColor">@color/primary</item>
  </style>

  <!-- Spacer -->
  <style name="spacer">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">15dp</item>
  </style>

  <style name="spacer_5">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">5dp</item>
  </style>

  <!-- Button -->
  <style name="form_button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">0dp</item>
    <item name="android:textSize">@dimen/text_medium</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <!-- Dialog Content -->
  <style name="dialog_content">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:padding">15dp</item>
